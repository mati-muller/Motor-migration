# SQL Server to PostgreSQL Migration Tool
# Copy this file to .env and fill in your values

# ===================
# SQL Server (Source)
# ===================
SQLSERVER_HOST=localhost
SQLSERVER_PORT=1433
SQLSERVER_DATABASE=your_database
SQLSERVER_USER=sa
SQLSERVER_PASSWORD=your_password
SQLSERVER_TRUST_CERT=true

# ===================
# PostgreSQL (Target)
# ===================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=your_database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password

# ===================
# Migration Config
# ===================
MODE=direct              # direct = streaming, export = via S3/BCP
PARALLEL_ANALYSIS=8      # Tables to analyze concurrently
PARALLEL_MIGRATION=4     # Tables to migrate concurrently
BATCH_SIZE=5000          # Rows per INSERT batch
JSON_THRESHOLD=73        # Score threshold for JSON detection (0-100)

# ===================
# Tables Filter (optional)
# ===================
# TABLES=dbo.Table1,dbo.Table2

# ===================
# BCP Config (for export mode)
# ===================
BCP_USE_DOCKER=false
# BCP_DOCKER_IMAGE=mcr.microsoft.com/mssql-tools

# ===================
# S3 Config (for export mode)
# ===================
# S3_ENABLED=true
# S3_BUCKET=your-bucket
# S3_REGION=us-east-1
# S3_PREFIX=migrations/
# S3_ACCESS_KEY=your_access_key
# S3_SECRET_KEY=your_secret_key
