# Example secrets configuration
# DO NOT commit real credentials!
#
# Create the secret with kubectl:
#
# kubectl create secret generic db-migration-secrets \
#   --from-literal=sqlserver-user=YOUR_SQLSERVER_USER \
#   --from-literal=sqlserver-password=YOUR_SQLSERVER_PASSWORD \
#   --from-literal=postgres-user=postgres \
#   --from-literal=postgres-password=YOUR_POSTGRES_PASSWORD
#
# Or apply this file after filling in values:
#
# kubectl apply -f secrets.yaml

apiVersion: v1
kind: Secret
metadata:
  name: db-migration-secrets
  namespace: default  # Change to your namespace
type: Opaque
stringData:
  sqlserver-user: "REPLACE_ME"
  sqlserver-password: "REPLACE_ME"
  postgres-user: "postgres"
  postgres-password: "REPLACE_ME"
